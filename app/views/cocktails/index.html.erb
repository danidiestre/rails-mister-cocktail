
<div class="container">
  <div class="row">
    <div class="col-xs-8 col-sm-8 col-sm-offset-1">
      <h1 class= "display-3">All cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary mt-4' %>
    </div>
  </div>
</div>